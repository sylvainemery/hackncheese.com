<ul class="postlist">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url }}" class="postlist-link"><h2>{{ post.data.title }}</h2></a>
    <time class="postlist-date" datetime="{{ post.date | dateToFormat('yyyy-MM-dd') }}">{{ post.date | dateToFormat('yyyy-MM-dd') }}</time>
    <p>{{ post.data.excerpt }}</p>
  </li>
{% endfor %}
</ul>
